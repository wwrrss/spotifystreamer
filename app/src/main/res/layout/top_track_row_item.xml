<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/imageview_width_height"
        android:layout_height="@dimen/imageview_width_height"
        android:id="@+id/topTrackImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_toRightOf="@+id/topTrackImageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/topTrackText1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_below="@+id/topTrackText1"
        android:layout_alignLeft="@+id/topTrackText1"
        android:layout_marginTop="10dp"
        android:id="@+id/topTrackText2" />
</RelativeLayout>